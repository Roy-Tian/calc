{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "mkdir -p out && gcc *.c -o out/${workspaceRootFolderName} -mwindows `pkg-config --cflags gtk+-3.0` `pkg-config --libs gtk+-3.0` && cd out && ./${workspaceRootFolderName}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}